@model Person
<div class="modal-header">
    <h4 class="modal-title">Do you really want to delete this person?</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

</div>
<div class="modal-body">
    <p>@Model.Vardas @Model.Pavarde</p>
    <span id="PersonIdSpan"></span>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-success" data-dismiss="modal">No</button>
    <a id="DeletePersonButton" asp-action="DeletePerson" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>